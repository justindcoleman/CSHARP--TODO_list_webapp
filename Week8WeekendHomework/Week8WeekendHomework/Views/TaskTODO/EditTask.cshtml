@model Week8WeekendHomework.Models.TaskTableHomework
@{
    ViewBag.Title = "EditTask";
}

<h2>Edit a Task</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.TaskID)

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.TaskName)
            @Html.EditorFor(model => model.TaskName)
        </div>

    </div>

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.TaskDescription)
            @Html.EditorFor(model => model.TaskDescription)
        </div>

    </div>

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.FormattedDate)
            @Html.EditorFor(model => model.TaskDueDate)
        </div>

    </div>

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.TaskComplete)
            @Html.EditorFor(model => model.TaskComplete)
        </div>

        <div class="form-group">
            <input type="submit" value="Save Edits" class="btn btn-default" />
        </div>
    </div>

}

<div>
    @Html.ActionLink("Drop Changes", "Index")
</div>